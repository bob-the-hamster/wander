script, icefeather learns summon, atk, textbox, begin
  variable(icefeather)
  icefeather := find hero(hero:icefeather)
  if(icefeather >= 0 && icefeather <= 3) then(
    if(teach spell(icefeather, atk)) then(
      show text box(textbox)
      wait for text box
    )
  )
end

