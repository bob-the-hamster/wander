script, advance revive effects, begin
  variable(i, n, d)
  for(i, npc copy count(17) -- 1, 0, -1) do(
    n := npc reference(17, i)
    d := npc direction(n)
    d += 1
    if(d > 3) then(
      destroy npc(n)
    )else(
      set npc direction(n, d)
    )
  )
end

