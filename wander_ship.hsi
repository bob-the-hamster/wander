  show text box(746)
  jiggle npc(2)
  set hero direction(0, left)
  set hero direction(1, left)
  wait for text box
  wait(3)
  
  suspend box advance
  show text box(747)
  jiggle hero(gisli, 1)
  wait(15)
  advance text box
  show text box(748) # Not now, Gisli!
  jiggle hero(bob, 1)
